{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FHE Keys",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "secret_key": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "%share": {
                    "type": "string"
                }
            },
            "required": ["%share"]
        }
      },
      "public_key": {
        "type": "string"
      },
      "parameters": {
        "type": "string"
      }
    },
    "required": ["_id", "secret_key", "public_key", "parameters"]
  }
}
